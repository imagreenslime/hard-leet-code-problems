#https://leetcode.com/problems/trapping-rain-water/
class Solution:
    def trap(self, height):
        # created a function inside a function as i will use it twice in my solution
        # my solution is a 2 pointer solution but modified to one pointer done twice
        def adder(temp, maxheight):
            total, left = 0, 0
            while left < maxheight - 1:
                if temp[left + 1] < temp[left]:
                    c = left + 1
                    # so if the height ever goes down below the current height, we will start to keep track
                    # c is a temporary tracker to mark how many dip under height
                    while temp[c] < temp[left]:
                        c += 1
                        total += temp[left] - temp[c - 1]
                    # we add up all the water drips until the height goes back up to the current height
                    left = c
                    # then we set the current height to where we left off
                else:
                    left += 1
            return total
        b = height.index(max(height))
        a = height[b:]
        return (adder(height, b)) + (adder(a[::-1], len(height) - b))
